alias ff='fastfetch'
alias ls='eza'
alias ll='ls -lah'
alias lg='lazygit'
alias mk='make'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias cm='chezmoi'
alias up='sudo pacman -Syu'
alias ra='yazi'
alias py='python3'
alias pip='pip3'
alias za='zathura'
alias pingo='ping google.com'
alias ccf='codecrafters'
alias tf='terraform'
alias q='exit'
alias c='clear'
